# OpenAI API Key - Required for embeddings and LLM
OPENAI_API_KEY=your_openai_api_key_here
GROQ_API_KEY=your_groq_api_key_here

# LLM Model Configuration
LLM_MODEL=llama3-70b-8192
EMBEDDING_MODEL=text-embedding-3-small

# Vector Store Configuration
VECTOR_STORE_PATH=app/data/embeddings/faiss_index
VECTOR_STORE_TYPE=faiss  # Options: faiss, chroma

# Constitution Source Configuration
CONSTITUTION_SOURCE_PATH=app/data/constitution/source

# Text Processing Configuration
CHUNK_SIZE=1000
CHUNK_OVERLAP=200

# Retrieval Configuration
NUM_RETRIEVED_DOCUMENTS=5 